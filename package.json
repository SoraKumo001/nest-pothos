{
  "name": "nest-pothos",
  "version": "0.0.1",
  "description": "",
  "author": "SoraKumo <info@croud.jp>",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "yarn dev:docker && nest start",
    "start:dev": "yarn dev:docker && nest start --watch",
    "start:debug": "yarn dev:docker && nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "dev:docker": "docker compose -p next-nexus -f docker/development/docker-compose.yml up -d",
    "prisma:migrate": "prisma format && prisma migrate dev",
    "prisma:generate": "prisma generate",
    "seed": "ts-node -r tsconfig-paths/register -T seed"
  },
  "dependencies": {
    "@apollo/server": "^4.9.3",
    "@nestjs/apollo": "^12.0.7",
    "@nestjs/common": "^10.2.4",
    "@nestjs/config": "^3.0.1",
    "@nestjs/core": "^10.2.4",
    "@nestjs/graphql": "^12.0.8",
    "@nestjs/platform-express": "^10.2.4",
    "@pothos/core": "^3.33.1",
    "@pothos/plugin-prisma": "^3.59.0",
    "@pothos/plugin-prisma-utils": "^0.11.0",
    "@pothos/plugin-scope-auth": "^3.20.0",
    "@prisma/client": "^5.2.0",
    "graphql": "^16.8.0",
    "graphql-tag": "^2.12.6",
    "jsonwebtoken": "^9.0.2",
    "pothos-prisma-generator": "^0.0.7",
    "pothos-schema-exporter": "^0.0.5",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.1.17",
    "@nestjs/schematics": "^10.0.2",
    "@nestjs/testing": "^10.2.4",
    "@types/express": "^4.17.17",
    "@types/jest": "29.5.4",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.5.9",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "29.6.4",
    "prettier": "^3.0.3",
    "prisma": "^5.2.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.2.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "main": "dist/main.js",
  "repository": "https://github.com/SoraKumo001/nest-graphql"
}
