{
  "name": "nest-pothos",
  "version": "0.0.2",
  "description": "",
  "author": "SoraKumo <info@croud.jp>",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "start:dev": "yarn dev:docker && next-exec -c test -- nest start --watch",
    "start": "nest start",
    "start:debug": "yarn dev:docker && nest start --debug --watch",
    "start:prod": "node dist/main",
    "build": "prisma generate && nest build",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "dev:docker": "docker compose -p next-nexus -f docker/development/docker-compose.yml up -d",
    "prisma:reset": "next-exec -c test -- prisma migrate reset -f",
    "prisma:migrate": "prisma format && next-exec -c test -- prisma migrate dev",
    "prisma:generate": "prisma generate",
    "seed": "next-exec -c test -- ts-node -r tsconfig-paths/register -T seeds"
  },
  "dependencies": {
    "@apollo/server": "^4.9.3",
    "@nestjs/apollo": "^12.0.9",
    "@nestjs/common": "^10.2.5",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.2.5",
    "@nestjs/graphql": "^12.0.9",
    "@nestjs/platform-express": "^10.2.5",
    "@pothos/core": "^3.35.0",
    "@pothos/plugin-prisma": "^3.59.3",
    "@pothos/plugin-prisma-utils": "^0.11.0",
    "@pothos/plugin-relay": "^3.43.1",
    "@pothos/plugin-scope-auth": "^3.20.0",
    "@prisma/client": "^5.3.1",
    "cookie": "^0.5.0",
    "graphql": "^16.8.0",
    "jsonwebtoken": "^9.0.2",
    "pothos-prisma-generator": "^0.0.15",
    "pothos-schema-exporter": "^0.0.6",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.1.17",
    "@nestjs/schematics": "^10.0.2",
    "@nestjs/testing": "^10.2.5",
    "@types/cookie": "^0.5.2",
    "@types/express": "^4.17.17",
    "@types/jest": "29.5.5",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/node": "^20.6.2",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "29.7.0",
    "next-exec": "^0.0.5",
    "prettier": "^3.0.3",
    "prisma": "^5.3.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.2.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "main": "dist/main.js",
  "repository": "https://github.com/SoraKumo001/nest-graphql"
}
